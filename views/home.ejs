<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <script src="https://kit.fontawesome.com/4d509971f0.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <h1><i class="fa-solid fa-clipboard-list"></i> &nbspTODO LIST</h1>
<hr>
<!-- input section -->
<form action="/create-todo" method="POST">
    <input type="text" name="work" placeholder="enter task">
    <input style="width:30%;" type="datetime-local" name="date" required>

    <button style="transform: scale(1.4); background-color:green; "   type="submit">Add List</button>
</form>
        <div>
            <ul class="no-bullets">

                <!-- list section -->
        <% for (let i of Todo_list) { %>
                    <li>
                        <p><%= i.work %></p>
                        <p><%= i.date %></p>

                        <!-- delete button -->
                        <p><a href="/delete-todo/<%= i._id %>"><i class="fa-solid fa-trash"></i></a></p>
                    </li>
                <% } %>
            </ul>
        </div>
    </body>
</html>
